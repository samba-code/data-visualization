{
  "plugins": ["react", "jest"],
  "extends": ["eslint:recommended", "plugin:react/recommended", 
    "plugin:jsx-a11y/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "react/prop-types": 2
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "fragment": "Fragment",
      "version": "latest"
    }
  }
}